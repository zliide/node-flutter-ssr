{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": [
            true,
            200
        ],
        "variable-name": [
            true,
            "allow-leading-underscore"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "never"
                },
                "esSpecCompliant": true
            }
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "member-access": [
            true,
            "no-public"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always"
            }
        ],
        "no-floating-promises": true,
        "max-classes-per-file": false,
        "object-literal-sort-keys": false,
        "no-console": false
    },
    "rulesDirectory": []
}